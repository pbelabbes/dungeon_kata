{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "Basic boilerplate project with Typecript for katas",
  "main": "main.ts",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "contributors": [
    "Adri√°n Ferrera <adrian.ferrera@leanmind.es>",
    "Daniel Ramos <daniel.ramos@leanmind.es>"
  ],
  "license": "ISC",
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "babel src -x .ts -d build",
    "build:watch": "babel src -x .ts -d build --watch",
    "lint": "eslint --ext .ts ./src ./__test__",
    "lint:fix": "eslint --ext .ts --fix ./src ./__test__",
    "pretest": "npm run lint",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/__test__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ]
  }
}
